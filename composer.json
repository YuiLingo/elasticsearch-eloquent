{
    "name": "isswp101/elasticsearch-eloquent",
    "type": "library",
    "description": "Elasticsearch functionality like Laravel Eloquent models",
    "keywords": [
        "elasticsearch",
        "eloquent"
    ],
    "homepage": "https://github.com/isswp101/elasticsearch-eloquent",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Sorokin",
            "email": "isswp101@gmail.com",
            "homepage": "https://github.com/isswp101",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.0",
        "elasticsearch/elasticsearch": "~5.0",
        "illuminate/support": "^5.3",
        "ongr/elasticsearch-dsl": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "scrutinizer/ocular": "~1.3",
        "vlucas/phpdotenv": "^2.2",
        "orchestra/testbench": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Isswp101\\Persimmon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Isswp101\\Persimmon\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
